<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exercise.Exercise_Cycle.cycle.cycle_c"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/my_purple"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="사이클 C"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_cycle_a_mon"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="월요일 \n 풀업 10세트, 푸쉬업 10세트"
        android:textSize="20sp"
        android:background="@drawable/round_button"
        style="?android:attr/borderlessButtonStyle"/>
    <View
        android:layout_width="300dp"
        android:layout_height="2px"
        android:background="@color/gray"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txt_cycle_a_tue"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="화요일\n 휴식"
        android:textSize="20sp"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"/>

    <View
        android:layout_width="300dp"
        android:layout_height="2px"
        android:background="@color/gray"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txt_cycle_a_wed"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="수요일\n풀업 10세트, 스쿼트 10세트"
        android:textSize="20sp"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"/>

    <View
        android:layout_width="300dp"
        android:layout_height="2px"
        android:background="@color/gray"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txt_cycle_a_thu"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="목요일\n휴식"
        android:textSize="20sp"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"/>

    <View
        android:layout_width="300dp"
        android:layout_height="2px"
        android:background="@color/gray"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/txt_cycle_a_fri"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="금요일\n푸쉬업 10세트, 스쿼트 10세트"
        android:textSize="20sp"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/btn_add_cycle_c"
        android:text="등록"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"/>
</LinearLayout>