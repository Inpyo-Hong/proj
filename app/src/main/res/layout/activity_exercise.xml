<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/my_purple"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="루틴을 선택하거나"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="운동방법을 확인해 보세요!"
            android:bufferType="spannable"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_routine"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:text="운동 루틴"
        android:textSize="30sp"
        android:drawableRight="@drawable/routine_reshape"
        android:background="@drawable/round_button"
        style="?android:attr/borderlessButtonStyle"/>
    <View
        android:layout_width="300dp"
        android:layout_height="2px"
        android:background="@color/gray"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_exercise_tip"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="운동 팁"
        android:textSize="30sp"
        android:drawableRight="@drawable/exercise_tip_reshape"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>