<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="루틴을 선택하거나\n운동 방법을 확인해 보세요!"
        android:textSize="30sp"
        android:gravity="left|center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/purple_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/routine_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="운동 루틴"
        android:drawableLeft="@drawable/ic_exercise"
        android:textSize="30sp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tip_button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tip_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="운동 팁"
        android:drawableLeft="@drawable/ic_exercise"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routine_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>