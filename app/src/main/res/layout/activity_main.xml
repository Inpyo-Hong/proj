<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/my_purple"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="SPB"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="스쿼트 어쩌구저쩌구"
            android:bufferType="spannable"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_exercise"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:text="운동"
        android:textSize="30sp"
        android:drawableRight="@drawable/exercise_reshape"
        android:background="@drawable/round_button"
        style="?android:attr/borderlessButtonStyle"/>
    <View
        android:layout_width="300dp"
        android:layout_height="2px"
        android:background="@color/gray"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_today_exercise"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="오늘의 운동"
        android:textSize="30sp"
        android:drawableRight="@drawable/today_exercise_reshape"
        android:background="@color/white"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>