<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:foregroundGravity="center"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exercise_button"
        android:backgroundTint="#aabbcc"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="운동"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_exercise"
        android:textSize="30sp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@id/imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/today_exercise_button"/>

    <com.google.android.material.button.MaterialButton
        android:drawableLeft="@drawable/ic_exercise"
        android:id="@+id/today_exercise_button"
        android:backgroundTint="#aabbcc"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="오늘의 운동"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>