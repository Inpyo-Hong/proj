<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:foregroundGravity="center"
        android:layout_gravity="center"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />




    <com.google.android.material.button.MaterialButton
        android:id="@+id/exercise_button"
        android:backgroundTint="@color/my_blue"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:fontFamily="@font/tmoneyroundwindextrabold"
        android:layout_gravity="center"
        android:text="운동"
        android:background="@drawable/btn_radius"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/today_exercise_button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/today_exercise_button"
        android:backgroundTint="@color/my_blue"
        android:layout_gravity="center"
        android:fontFamily="@font/tmoneyroundwindextrabold"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="오늘의 운동"
        android:background="@drawable/btn_radius"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_button"/>

</LinearLayout>